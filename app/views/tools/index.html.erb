<h1>List of Tools</h1>
<div class="container">
  <%= link_to "Add your tool", new_tool_path, class: "btn btn-flat my-4" %>

  <div class="row">
    <% @tools.each do |tool| %>
      <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
        <%= link_to tool_path(tool), class: "card h-100" do %>
          <img src="<%= tool.image_url %>" class="card-img-top" alt="<%= tool.name %>">
          <div class="card-body d-flex justify-content-between">
            <h5 class="card-title"><%= tool.name %></h5>
            <p class="card-text"><%= number_to_currency(tool.price, unit: "â‚¬", separator: ",") %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
